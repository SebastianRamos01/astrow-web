---
import { ProductsMen } from "../data/productsMen"
import ProductCard from "./ProductCard.astro"

const firstsProducts = ProductsMen.slice(0, 4)
const firsts3Products = ProductsMen.slice(0, 3)
---

<section class="my-5 md:py-[4.5rem] relative">
    <div class="py-5 md:py-[4rem] md:absolute top-0 w-full">
        <div class="flex justify-between">
            <h2>
                Men Autumn Collection 2025
            </h2>
            <div>See Full Collection</div>
        </div>
    </div>
    <ul class="grid grid-cols-2 md:grid-cols-10 place-items-end gap-3 md:gap-14 md:hidden">
        {firstsProducts.map((el, i) => (
            <ProductCard 
                id={el.id} 
                name={el.name} 
                price={el.price} 
                imageUrl={el.img}
                style={`${i === 1 ? 'md:col-span-4' : 'col-span-1 md:col-span-3'}`} />
        ))}
    </ul>
    <ul class="hidden md:grid grid-cols-2 md:grid-cols-10 place-items-end gap-3 md:gap-10">
        {firsts3Products.map((el, i) => (
            <ProductCard 
                id={el.id} 
                name={el.name} 
                price={el.price} 
                imageUrl={el.img}
                style={`${i === 1 ? 'md:col-span-4' : 'col-span-1 md:col-span-3'}`} />
        ))}
    </ul>
</section>